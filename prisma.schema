datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String! @id
  username String! @unique
  email String! @unique
  password String!
  posts Post[]
}

model Post {
  id String! @id
  title String!
  content String!
  author User! @relation(name: "author")
  comments Comment[]
}

model Comment {
  id String! @id
  content String!
  author User! @relation(name: "author")
  post Post! @relation(name: "post")
}

