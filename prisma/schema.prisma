datasource db {
  provider = "postgresql"
  url      = "localhost"
}

model User {
  id       String    @unique
  username String    @unique
  email    String    @unique
  password String
  posts    Post
  Comment  Comment[]
}

model Post {
  id       String  @unique
  title    String
  content  String
  author   User    @relation(fields: [userId], references: [id])
  comments Comment
  userId   String
}

model Comment {
  id      String @unique
  content String
  author  User   @relation(fields: [userId], references: [id])
  post    Post   @relation(fields: [postId], references: [id])
  userId  String
  postId  String
}
