datasource dB {
  provider = "postgresql"
  url      = "DATABASE_URL"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String    @id @unique @default(uuid())
  username String    @unique
  email    String    @unique
  type     UserType
  password String
  posts    Post?
  Comment  Comment[]
}

model Post {
  id       Int      @id @unique
  title    String
  content  String
  author   User     @relation(fields: [userId], references: [id])
  comments Comment?
  userId   String
}

model Comment {
  id            String                     @id @unique
  content       String
  author        User                       @relation(fields: [userId], references: [id])
  post          Post                       @relation(fields: [postId], references: [id])
  postAlgorithm String                     @default("whatever")
  postEmbedding Unsupported("vector[{8}]")
  userId        String
  postId        Int
}

enum UserType {
  ADMIN
  USER
}
