datasource db {
 provider = "postgresql"
 url = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}

model User {
  id       String    @id @unique @default(uuid())
  username String    @unique
  email    String    @unique
  type     UserType
  password String
  posts    Post?
  Comment  Comment[]
}

model Post {
  id        Int      @id @unique @default(autoincrement())
  title     String
  content   String
  author    User     @relation(fields: [userId], references: [id])
  comments  Comment? @relation(fields: [commentId], references: [id])
  userId    String
  commentId String?
}

model Comment {
  id            String                   @id @unique
  content       String
  author        User                     @relation(fields: [userId], references: [id])
  post          String
  postAlgorithm String                   @default("whatever")
  postEmbedding Unsupported("vector(8)")
  Post          Post[]
  userId        String
}

enum UserType {
  ADMIN
  USER
}
